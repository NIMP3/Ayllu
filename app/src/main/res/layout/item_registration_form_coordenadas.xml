<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_coordenadas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_latitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_border"
            android:text="@string/latitudePointDialog"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/edit_text_padding"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_latitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_margin="@dimen/fab_margin"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_icon="@drawable/ic_point"
            app:fab_size="mini"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_longitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_border"
            android:text="@string/lengthPointDialog"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/edit_text_padding"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_longitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            app:fab_colorNormal="@color/colorAccent"
            android:layout_margin="@dimen/fab_margin"
            app:fab_icon="@drawable/ic_point"
            app:fab_size="mini"/>
    </LinearLayout>
</LinearLayout>