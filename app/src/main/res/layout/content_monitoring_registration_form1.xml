<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="com.example.edwin.ayllu.MonitoringRegistrationForm1Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:text="ZONAS RECONOCIDAS POR EL QHAPAQ Ã‘AN"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_subtitle"
        android:text="Seleccione la Zona donde se registrara el punto"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/date"/>

    <GridLayout
        android:id="@+id/gl_menu"
        android:columnCount="2"
        android:rowCount="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_below="@+id/tv_subtitle"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tramos"
            android:text="TRAMOS"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_subtramos"
            android:text="SUBTRAMOS"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/btn_tramos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tramo"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/btn_subtramos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_subtramos"
            android:layout_gravity="center"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_secciones"
            android:text="SECCIONES"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_areas"
            android:text="AREAS"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/btn_secciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_secciones"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/btn_areas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_area"
            android:layout_gravity="center"/>

    </GridLayout>

</RelativeLayout>