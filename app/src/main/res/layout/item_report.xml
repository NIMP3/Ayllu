<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginTop="2dp"
    android:layout_margin="@dimen/normal_padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_prueba"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/itemCardViewDescriptionPrueba"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo_splash"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="12dp"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:orientation="vertical"
                android:background="@color/colorBackgroundCardView"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/tv_title_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/itemCardViewFecha"
                    android:textColor="@color/colorIconCardView"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/area_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/itemCardViewFecha"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_date"
                        android:tint="@color/colorIconCardView" />

                    <TextView
                        android:id="@+id/tv_fecha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="2017-02-02"
                        android:textColor="@color/colorTextCardView"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_title_latitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="start"
                    android:text="@string/itemCardViewLatitud"
                    android:textColor="@color/colorIconCardView"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/area_latitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/itemCardViewLatitud"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_location"
                        android:tint="@color/colorIconCardView" />

                    <TextView
                        android:id="@+id/tv_latitud"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="12344323,12"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorTextCardView"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_title_longitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="start"
                    android:text="@string/itemCardViewLongitud"
                    android:textColor="@color/colorIconCardView"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/area_longitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/itemCardViewLongitud"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_location"
                        android:tint="@color/colorIconCardView" />

                    <TextView
                        android:id="@+id/tv_longitud"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="12343523.45"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorTextCardView"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_title_variable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="start"
                    android:text="@string/itemCardViewVariable"
                    android:textColor="@color/colorIconCardView"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/area_variable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/itemCardViewVariable"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_variable"
                        android:tint="@color/colorIconCardView" />

                    <TextView
                        android:id="@+id/tv_variable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="identidad, cohesion social, cambios en la poblacion y comunidades locales"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorTextCardView"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>