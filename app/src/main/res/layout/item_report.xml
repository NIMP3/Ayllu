<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    card_view:cardBackgroundColor="@color/colorCardViewBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:elevation="10dp">

        <LinearLayout
            android:background="@color/colorItemPrimaryCardView"
            android:layout_width="94dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="VARIABLE"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorTextCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_variable"
                android:text="202"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorTextCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="AREA"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorTextCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_area"
                android:text="202"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorTextCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:id="@+id/area_coordenadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_latitud" />

                <TextView
                    android:id="@+id/tv_latitud"
                    android:text="20220020"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:paddingLeft="2dp"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_longitud" />

                <TextView
                    android:id="@+id/tv_longitud"
                    android:text="20220020"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:paddingLeft="2dp"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/area_fecha"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_monitor" />

                <TextView
                    android:id="@+id/tv_monitor"
                    android:text="Edwin Yovanny"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:paddingLeft="2dp"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_date" />

                <TextView
                    android:id="@+id/tv_fecha"
                    android:text="20/11/1992"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:paddingLeft="2dp"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
