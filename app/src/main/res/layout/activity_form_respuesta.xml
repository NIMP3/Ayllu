<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_form_respuesta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.edwin.ayllu.FormRespuesta">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:id="@+id/textView4"
        android:text="@string/ResAdm"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:text="@string/evaluacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="24dp"
        android:id="@+id/textView10" />

    <TextView
        android:text="@string/personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_ava"
        android:layout_marginTop="20dp"
        android:id="@+id/textView11"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />


    <Button
        android:text="Registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_con"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/button2"
        android:onClick="registrar" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_rec"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignLeft="@+id/spinner_pre"
        android:layout_alignStart="@+id/spinner_pre" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_con"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignLeft="@+id/spinner_rec"
        android:layout_alignStart="@+id/spinner_rec" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_pre"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignLeft="@+id/spinner_tie"
        android:layout_alignStart="@+id/spinner_tie" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_ava"
        android:layout_alignTop="@+id/textView10"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15"
        android:layout_marginLeft="103dp"
        android:layout_marginStart="103dp" />

    <TextView
        android:text="@string/conocimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/textView15"
        android:layout_below="@+id/spinner_rec"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_tie"
        android:layout_below="@+id/spinner_per"
        android:layout_alignLeft="@+id/spinner_per"
        android:layout_alignStart="@+id/spinner_per"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="@string/tiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_alignBottom="@+id/spinner_tie"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_per"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/spinner_ava"
        android:layout_alignStart="@+id/spinner_ava" />

    <TextView
        android:text="@string/presupuesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="@string/recursos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_below="@+id/spinner_pre"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="17dp" />

</RelativeLayout>
